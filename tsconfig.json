{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.d.ts", "**/*/*.d.ts", "**/*.spec.ts", "**/*.integration.ts"],
  "compilerOptions": {
    "paths": {
      "*": ["./src/@types/*"]
    },
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "ES2018",
    "lib": ["dom", "es2018", "esnext.asynciterable"],
    "module": "commonJS",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true ,
    "esModuleInterop": true 
  }
}
